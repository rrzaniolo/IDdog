<resources>

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purplishBlue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="AppTheme.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/heebo_regular</item>
        <item name="android:textColor">@color/purplishBlue</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@color/purplishBlue</item>
        <item name="tabTextAppearance">@style/AppTheme.TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/purplishBlue</item>
    </style>

    <!-- Loading Dialog Fragment Theme -->
    <style name="AppTheme.RelativeLayout.DialogFragment.Loading" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!-- Login Activity Themes -->
    <style name="AppTheme.EmailTextInputEditText" parent="AppTheme.TextInputEditText">
        <item name="android:textColorHint">@color/purplishBlue</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textColorHintInverse">@color/purple</item>
        <item name="android:colorBackgroundCacheHint">@color/purple</item>
        <item name="android:textSize">@dimen/aLogin_tietEmail_textSize</item>
    </style>
</resources>
